@page "/"
@model Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2>Public Timeline</h2>

    @* ------------------- CHEEP INPUT BOX (only for logged-in users) ------------------- *@
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <div class="cheepbox">
            <h3>What's on your mind, @User.Identity!.Name?</h3>
            <form method="post">
                <textarea asp-for="Text" 
                        rows="4" 
                        placeholder="Write your cheep here (max 160 characters)..." 
                        style="width: 100%; max-width: 680px; font-family: inherit;"></textarea>
                <br /><br />
                <input type="submit" value="Share" style="float: right;" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </form>
        </div>

        @if (!ModelState.IsValid)
        {
            <div class="error">
                @foreach (var error in ModelState["Text"]!.Errors)
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    }

    @* ------------------- LIST OF CHEEPS ------------------- *@
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>

                            @if (User.Identity?.IsAuthenticated == true && 
                                User.Identity.Name is not null && 
                                User.Identity.Name != cheep.AuthorName)
                            {
                                var isFollowing = await Model.IsFollowingAsync(cheep.AuthorName);
                                if (isFollowing)
                                {
                                    <a href="?handler=Unfollow&followee=@cheep.AuthorName" class="text-danger">unfollow</a>
                                }
                                else
                                {
                                    <a href="?handler=Follow&followee=@cheep.AuthorName">follow</a>
                                }
                            }
                        </strong>
                        @cheep.Text
                        <small>— @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>

@section Scripts {
    <partial name="~/Areas/Identity/Pages/_ValidationScriptsPartial.cshtml" />
}